<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="2dp"
    android:id="@+id/view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_app_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@drawable/item_failtoshow"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pic_item_ma_fengxian"
            android:layout_alignTop="@+id/item_app_icon"
            android:layout_alignLeft="@+id/item_app_icon"
            android:layout_alignStart="@+id/item_app_icon" />
        <TextView
            android:id="@+id/item_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称：手机QQ"
            android:textSize="16sp"
            android:maxLines="1"
            android:layout_alignTop="@+id/item_app_icon"
            android:layout_toEndOf="@+id/item_app_icon"
            android:layout_toRightOf="@+id/item_app_icon" />
        <TextView
            android:id="@+id/item_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="包名：com.tencent.qq"
            android:textSize="15sp"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/item_app_icon"
            android:layout_toRightOf="@+id/item_app_icon" />
        <TextView
            android:id="@+id/item_permission_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="权限数量：63条"
            android:maxLines="1"
            android:textSize="15sp"
            android:textColor="#FF0000"
            android:layout_below="@+id/item_package_name"
            android:layout_toEndOf="@+id/item_app_icon"
            android:layout_toRightOf="@+id/item_app_icon" />
        <ImageView
            android:id="@+id/item_jiantou"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/item_jiantou"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


</android.support.v7.widget.CardView>